<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="LOG-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/logs/registrationManager-web.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${catalina.base}/logs/registrationManager-web.%d{yyyyMMdd}.log</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder charset="UTF-8">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="systemout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="UTF-8">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ${HOSTNAME} [%thread] %-5level %logger{15} %L - %msg%n
			</pattern>
		</encoder>
		<target>System.out</target>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="LOG-APPENDER" />
		<appender-ref ref="systemout" />
	</root>

</configuration>